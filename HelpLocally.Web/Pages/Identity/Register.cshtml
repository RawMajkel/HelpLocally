@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form method="post">
    <div class="form-group">
        <label>Login</label>
        <input type="text" asp-for="Register.Login" class="form-control" />
        <span asp-validation-for="Register.Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" asp-for="Register.Password" class="form-control" />
        <span asp-validation-for="Register.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Role</label>
        <select class="form-control" asp-for="@Model.SelectedRole" asp-items="@Model.Roles"></select>
    </div>
    <button class="btn btn-primary">Register</button>
</form>